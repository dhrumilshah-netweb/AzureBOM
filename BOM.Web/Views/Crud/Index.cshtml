<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>PersonID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Address</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.PersonID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td><input type="button" value="Edit" onclick="location.href='@Url.Action("Create", "Crud",new BOM.DAL.Person {PersonID =  item.PersonID})'" />  <input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Crud",new BOM.DAL.Person {PersonID =  item.PersonID})'" /></td>
            </tr>
            }
        </tbody>
    </table>
</div>